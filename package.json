{
	"name": "win",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"dev:api": "bun run --filter @wingmnn/api dev",
		"dev:web": "bun run --filter @wingmnn/web dev",
		"dev:mobile": "bun run --filter @wingmnn/mobile dev",
		"dev:hero": "bun run --filter @wingmnn/hero dev",
		"dev:desktop": "bun run --filter @wingmnn/web tauri:dev",
		"db:generate": "bun run --filter @wingmnn/db db:generate",
		"db:migrate": "bun run --filter @wingmnn/db db:migrate",
		"db:push": "bun run --filter @wingmnn/db db:push",
		"db:studio": "bun run --filter @wingmnn/db db:studio",
		"start:redis": "redis-server",
		"start:workers": "bun run --filter @wingmnn/queue start:workers"
	},
	"devDependencies": {
		"@types/bun": "^1.3.9"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"zod": "^4.3.6"
	}
}
